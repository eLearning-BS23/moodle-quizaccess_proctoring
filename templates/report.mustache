<div id="main" >
    <h2>{{quizname}}</h2>
    <br/>
    <div class="mb-3">
       <button type="button" class="btn btn-primary" id ="backbutton" >Back</button>
    </div>
    <div id ="form-left" >
        <form action="{{url}}">
            <input type="hidden" id="courseid" name="courseid" value="{{courseid}}">
            <input type="hidden" id="cmid" name="cmid" value="{{cmid}}">
            <div class="container-fluid">
                <div class="row">
                    <div class="w-50 mr-1">
                        <input type="text"
                               class="form-control mb-2"
                               id="searchKey"
                               name="searchKey"
                               placeholder="Search by email"
                               value="{{searchkey}}">
                    </div>
                    <div class="mr-1">
                        <input type="submit" class="btn btn-primary mb-2" name="submitType" value="Search">
                    </div>
                    {{#showclearbutton}}
                    <div>
                        <input type="submit" class="btn btn-secondary mb-2" name="submitType" value="Clear">
                    </div>
                    {{/showclearbutton}}
                </div>
            </div>
        </form>
    </div>

    <div class="text-xs-left text-md-right mb-3">
        {{#settingsbtn}}
        <a class="btn btn-primary" href="{{settingspageurl}}">Proctoring Summary Report</a>
        {{/settingsbtn}}
    </div>

    <div class="box generalbox adminerror alert alert-info p-y-1">
        {{proctoringsummary}}
    </div>

    <br/>
    
</div>

{{#checkrow}}

<table class="table">
<thead>
        <tr>
            <th>{{#str}}user,quizaccess_proctoring{{/str}}</th>
            <th>{{#str}}email,quizaccess_proctoring{{/str}}</th>
            <th>{{#str}}dateverified,quizaccess_proctoring{{/str}}</th>
            <th>{{#str}}warninglabel,quizaccess_proctoring{{/str}}</th>
            <th>{{#str}}actions,quizaccess_proctoring{{/str}}</th>
        </tr>
    </thead>
<tbody>
{{#rows}}
    <tr>
        <td><a href="{{userlink}}" target="_blank">{{fullname}}</a></td>
        <td>{{email}}</td>
        <td>{{timemodified}}</td>
        <td>
            {{#warningicon}}
            <i class="icon fa fa-check fa-fw" id ="check" ></i>         
            {{/warningicon}}
             {{^warningicon}}
             <i class="icon fa fa-exclamation fa-fw" id = "exclamation" ></i>         
            {{/warningicon}}
        </td>
        <td>
            <a href="{{viewurl}}">
                <i class="icon fa fa-folder-o fa-fw"></i>
            </a>
            <a href="#"
                data-confirmation="modal"
                data-confirmation-type="delete"
                data-confirmation-title-str='["delete", "core"]'
                data-confirmation-content-str='["areyousure_delete_record", "quizaccess_proctoring"]'
                data-confirmation-yes-button-str='["delete", "core"]'
                data-confirmation-action-url="{{deleteurl}}"
                data-confirmation-destination="{{deleteurl}}">
                <i class="icon fa fa-trash fa-fw"></i>
            </a>
        </td>
    </tr>
    </tbody>
{{/rows}}

</table>

{{/checkrow}}

{{^checkrow}}
<div class="alert alert-info text-center" role="alert" >
<h5>Nothing to display</h5>
</div>
{{/checkrow}}