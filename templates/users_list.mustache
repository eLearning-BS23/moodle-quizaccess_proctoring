{{!
    @template quizaccess_proctoring/users_list
    Example context (json):
    {

    }
}}

<div class="card">
    <div class="card-body">
        <a href="{{settingsurl}}" class="btn btn-outline-primary pull-right">{{#str}}
            mainsettingspagebtn, quizaccess_proctoring {{/str}}</a>
        <br></div>
</div>

<div class="card">
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>User name</th>
            <th>Preview</th>
            <th>Action upload image</th>
        </tr>
        </thead>
        <tbody>
        {{#users}}
            <tr>
                <td>{{ username }}</td>
                <td>
                    {{#image_url}}
                        <img src="{{ image_url }}" width="auto" height="100"/>
                    {{/image_url}}
                    {{^image_url}}
                        <span class="label label-danger">{{#str}}
                            upload_first_image, quizaccess_proctoring {{/str}}</span>
                    {{/image_url}}
                </td>
                <td>
                    {{^delete_image_url}}
                        <a href="{{ redirecturl }}?id={{ id }} " class="btn btn-sm btn-info">
                        <i class="fa fa-upload"></i>
                        </a>
                    {{/delete_image_url}}
                    {{#delete_image_url}}
                        <a class="btn btn-sm btn-warning"
                            href="{{edit_image_url}}">
                            <i class="fa fa-pencil-square-o"></i>
                        </a>
                        <a class="btn btn-sm btn-danger"
                           href="{{delete_image_url}}"
                           onclick="if(!confirm('Do you Want to Proceed?')){return false;}" >
                            <i class="fa fa-trash"></i>
                        </a>
                    {{/delete_image_url}}
                </td>
            </tr>
        {{/users}}
        </tbody>
    </table>
</div>
